<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IncidentFragment"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/camera_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17dp"
                android:layout_marginTop="15dp"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="30dp"
                    app:cardCornerRadius="400dp"
                    app:cardElevation="8dp">

                    <ImageView
                        android:id="@+id/scanqr"
                        android:layout_width="155dp"
                        android:layout_height="155dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="20dp"
                        android:src="@drawable/ic_baseline_photo_camera_24" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_width="368dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/camera_lay"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="30dp"
                    android:padding="100dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:text="Title:"
                            android:textColor="@color/black"
                            android:textSize="20dp" />
                        <!-- The image taken will be displayed here -->
                        <EditText
                            android:id="@+id/visitorName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxHeight="250dp"
                            android:backgroundTint="#D3D3D3"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:text=" Address:"
                            android:textColor="@color/black"
                            android:textSize="20dp" />
                        <!-- The image taken will be displayed here -->
                        <EditText
                            android:id="@+id/visitorIC"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxHeight="250dp"
                            android:backgroundTint="#D3D3D3"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:text="Remarks:"
                            android:textColor="@color/black"
                            android:textSize="20dp" />
                        <!-- The image taken will be displayed here -->
                        <EditText
                            android:id="@+id/visitorAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxHeight="250dp"
                            android:backgroundTint="#D3D3D3"
                            android:textColor="@color/black" />

                        <Button
                            android:id="@+id/uploadIc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:backgroundTint="@color/black"
                            android:text="Submit"
                            android:layout_marginBottom="20dp"
                            android:textColor="@color/white" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>



    </ScrollView>


</RelativeLayout>